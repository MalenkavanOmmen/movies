
<header class="header" href="./movies">
  <!-- Here comes the header-->
  <h1 class="header-title">Channels</h1>
</header>

<p id="notice"><%= notice %></p>
<% @channels.each do |channel| %>

  <p>
    <strong>Name:</strong>
    <%= channel.name %>
  </p>


  <h4>List of Movies</h4>

  <% if channel.movies.any? %>
    <ul>
      <% channel.movies.each do |movie| %>
        <li><%= movie.name %></li>
      <% end %>
    </ul>
  <% else %>
    <p>There are no channels in this channel.</p>
  <% end %>

<% end %>
